<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="NewSectionButton" TargetType="Button">

        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        
                        <Border Height="30" Width="150" CornerRadius="10" Background="{TemplateBinding Background}" Margin="5,0,5,0" VerticalAlignment="Top">
                            <TextBlock Text="＋ New Section" FontSize="16"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#FFFFFF"/>
        </Style.Setters>

        <Style.Triggers>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#DDDDDD"/>
            </Trigger>

        </Style.Triggers>
    </Style>
</ResourceDictionary>